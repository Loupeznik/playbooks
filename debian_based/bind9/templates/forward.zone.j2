$TTL    {{ item.ttl }}
@       IN      SOA     {{ dns_server_primary }}. {{ dns_server_email }}. (
                        {{ item.serial }}         ; Serial
                        {{ item.refresh }}        ; Refresh
                        {{ item.retry }}          ; Retry
                        {{ item.expire }}         ; Expire
                        {{ item.negative_cache_ttl }} ) ; Negative Cache TTL

{% for record in item.records %}
{% if record.type == 'NS' %}
{{ record.name }}    IN      {{ record.type }}      {{ record.value }}
{% elif record.type == 'A' %}
{{ record.name }}    IN      {{ record.type }}      {{ record.value }}
{% elif record.type == 'CNAME' %}
{{ record.name }}    IN      {{ record.type }}      {{ record.value }}
{% elif record.type == 'MX' %}
{{ record.name }}    IN      {{ record.type }}      {{ record.priority }}    {{ record.value }}
{% elif record.type == 'TXT' %}
{{ record.name }}    IN      {{ record.type }}      "{{ record.value }}"
{% endif %}
{% endfor %}
